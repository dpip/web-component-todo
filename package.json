{
    "name": "static-webpack-boilerplate",
    "version": "1.0.0",
    "description": "Modern Webpack boilerplate for small static sites!",
    "license": "MIT",
    "author": "Antoni Kepinski <a@kepinski.me> (https://kepinski.me)",
    "main": "app.js",
    "scripts": {
        "start": "webpack-dev-server --mode development --open",
        "build": "webpack --mode production",
        "now-build": "webpack --mode production",
        "test": "xo && stylelint 'public/css/*.css'"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "7.9.0",
        "babel-loader": "^8.1.0",
        "clean-css-loader": "^2.0.0",
        "css-loader": "^3.4.2",
        "extract-css-chunks-webpack-plugin": "^4.7.4",
        "file-loader": "^6.0.0",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "html-loader": "1.0.0",
        "html-webpack-plugin": "^4.0.1",
        "imagemin": "^7.0.1",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-pngquant": "^8.0.0",
        "imagemin-svgo": "^7.1.0",
        "imagemin-webp": "^5.1.0",
        "img-loader": "^3.0.1",
        "script-ext-html-webpack-plugin": "^2.1.4",
        "stylelint": "^13.2.1",
        "stylelint-config-recommended": "^3.0.0",
        "terser-webpack-plugin": "^2.3.5",
        "url-loader": "^4.0.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-pwa-manifest": "^4.2.0",
        "workbox-webpack-plugin": "^5.1.2",
        "xo": "^0.28.0"
    },
    "dependencies": {
        "@webcomponents/webcomponentsjs": "^2.4.4",
        "core-js": "^3.6.4",
        "lit-element": "^2.4.0",
        "modern-normalize": "^0.6.0"
    },
    "xo": {
        "envs": [
            "node",
            "browser"
        ],
        "rules": {
            "import/no-unassigned-import": "off",
            "import/no-extraneous-dependencies": "off"
        }
    }
}
